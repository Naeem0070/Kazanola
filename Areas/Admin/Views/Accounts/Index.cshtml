@model Kazanola.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle ">
    <h1>Accounts</h1>
    <hr />

    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Account Manage </li>
        </ol>
    </div>
    <div class="r_dir">
        <a asp-action="Register" asp-controller="Accounts" value="Create" class="btn btn-primary ">Create</a>
    </div>
    <br />
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <table class="table datatable">
                        <thead>
                            <tr class="">
                                <th>
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.user_image)
                                </th>

                                <th>
                                    Option
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.users)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dis_Name)
                                    </td>
                                    <td>
                                        <img width="50" height="20" class="clk_img" src="~/User_img/@item.User_image" />
                                    </td>
                                    <td class="td_option">
                                        <a title="Edit" asp-action="Edit" asp-route-id="@item.Id">
                                            <img src="~/pen.png" png" width="30" height="30" />
                                        </a>

                                        @*<button type="button" class="btn btn-info " data-toggle="modal" data-target="#myModal">Open Modal</button>*@

                                        <a id="myModal" class="btn btn-outline-danger btn-sm rounded-circle btnDelete"
                                           href="#" data-bs-target="#batatat" data-bs-toggle="modal"
                                           data-path="@Url.Action("Delete", "Accounts", new { id = @item.Id })">
                                            <i class="ri-delete-bin-4-fill fs-4"></i>
                                        </a>










                                    <td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="batatat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="CancelDelete()" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="ConfirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
        var pathDelete="";
        $('.btnDelete').click(function(){
            pathDelete =$(this).data("path")
        })
        function ConfirmDelete()
        {
            window.location=pathDelete;
            pathDelete="";
        }
        function CancelDelete()
        {
           pathDelete="";
        }
    </script>
}
