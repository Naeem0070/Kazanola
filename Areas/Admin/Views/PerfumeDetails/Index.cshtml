@model Kazanola.ViewModels.PerfumeDetailsVM
@{
    ViewData["Title"] = "Index";
}

<h1>FullAction</h1>
<div class="pagetitle">
    <h1>Menu</h1>
    <hr />
    <nav>
        <ol class="breadcrumb bg-light p-2 rounded">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Master Offer</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Index" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="ProductId" class="control-label"></label>
                                <div class="col-sm-8">
                                    <select asp-for="ProductId" class="form-select select2"
                                            asp-items="@(new SelectList(Model.ProductsList, "ProductID", "ProductName"))">
                                        <option value="">-- اختر فاتورة --</option>
                                    </select>
                                    <span asp-validation-for="ProductId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="ProductDiscreption" class="control-label"></label>
                                <div class="col-sm-8">
                                    <input autofocus asp-for="ProductDiscreption" class="form-control" />
                                    <span asp-validation-for="ProductDiscreption" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="ProductType" class="control-label"></label>
                                <div class="col-sm-8">
                                    <input autofocus asp-for="ProductType" class="form-control" />
                                    <span asp-validation-for="ProductType" class="text-danger"></span>
                                </div>
                            </div>

                            @for (int i = 1; i <= 6; i++)
                            {
                                var imageProp = (string?)Model.GetType().GetProperty($"ProductImage{i}")?.GetValue(Model);
                                var fileProp = $"FileImage{i}";

                                if (!string.IsNullOrEmpty(imageProp))
                                {
                                    <div class="col-md-6 d-flex align-items-center mb-3">
                                        <label class="col-sm-4 col-form-label bold">الصورة @i</label>
                                        <div class="col-sm-8">
                                            <input type="hidden" name="ProductImage@i" value="@imageProp" class="form-control" />
                                            <img src="~/ProductImage/@imageProp" style="max-width:50px" />
                                        </div>
                                    </div>
                                }

                                <div class="col-md-6 d-flex align-items-center mb-3">
                                    <label class="control-label">الصورة @i (جديدة)</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@Model.GetType().GetProperty(fileProp).Name" class="form-control" />
                                        <span asp-validation-for="@Model.GetType().GetProperty(fileProp).Name" class="text-danger"></span>
                                    </div>
                                </div>
                            }

                            <div class="col-md-6 d-flex align-items-center mb-3">

                                <div class="col-sm-8">
                                    <input type="hidden" autofocus asp-for="PerfumeDetailsId" class="form-control" />
                                    <span asp-validation-for="PerfumeDetailsId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group text-end mt-3" style="direction:rtl;">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="IndexReset" class="btn btn-dark">Reset</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>





<section class="section ">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm pt-5">
                <div class="card-body">
                    <table class="table datatable  table-hover table-striped text-center table-bordered">
                        <thead class="table-dark">
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.product.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductDiscreption)
                                </th>
                            <th>
                                    @Html.DisplayNameFor(model => model.ProductType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage3)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage4)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage5)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FileImage6)
                                </th>
                                 <th>
                                    @Html.DisplayNameFor(model => model.OutOfStock)
                                </th>


                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PerfumeDetailsList)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.product.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductDiscreption)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductType)
                                    </td>

                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage1" style="max-width:100px" />
                                    </td>
                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage2" style="max-width:100px" />
                                    </td>
                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage3" style="max-width:100px" />
                                    </td>
                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage4" style="max-width:100px" />
                                    </td>
                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage5" style="max-width:100px" />
                                    </td>
                                    <td>
                                        <img src="~/ProductImage/@item.ProductImage6" style="max-width:100px" />
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <a title="IsActive" asp-action="OutOfStoke" asp-route-id="@item.PerfumeDetailsId"
                                               class="btn btn-outline-success btn-sm rounded-circle">
                                                <i class="ri-checkbox-circle-fill fs-4"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a title="IsActive" asp-action="OutOfStoke" asp-route-id="@item.PerfumeDetailsId"
                                               class="btn btn-outline-dark btn-sm rounded-circle">
                                                <i class="ri-close-circle-fill fs-4"></i>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a title="Edit" asp-action="Index" asp-route-EditId="@item.PerfumeDetailsId" class="btn btn-outline-primary btn-sm rounded-circle">
                                            <i class="ri-edit-box-fill fs-4"></i>
                                        </a>
                                        <a id="myModal" class="btn btn-outline-danger btn-sm rounded-circle btnDelete"
                                           href="#" data-bs-target="#batatat" data-bs-toggle="modal"
                                           data-path="@Url.Action("Delete", "PerfumeDetails", new { id = @item.PerfumeDetailsId })">
                                            <i class="ri-delete-bin-4-fill fs-4"></i>
                                        </a>
                                        @if (item.IsActive)
                                        {
                                            <a title="IsActive" asp-action="Update_Active" asp-route-id="@item.PerfumeDetailsId"
                                               class="btn btn-outline-success btn-sm rounded-circle">
                                                <i class="ri-checkbox-circle-fill fs-4"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a title="IsActive" asp-action="Update_Active" asp-route-id="@item.PerfumeDetailsId"
                                               class="btn btn-outline-dark btn-sm rounded-circle">
                                                <i class="ri-close-circle-fill fs-4"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="batatat" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="CancelDelete()" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" onclick="ConfirmDelete()">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
        var pathDelete="";
        $('.btnDelete').click(function(){
            pathDelete =$(this).data("path")
        })
        function ConfirmDelete()
        {
            window.location=pathDelete;
            pathDelete="";
        }
        function CancelDelete()
        {
           pathDelete="";
        }
    </script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "-- اختر المنتج --",
                allowClear: true
            });
        });
    </script>

}