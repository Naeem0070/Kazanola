@model Kazanola.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<!--Home slider-->
<div class="slideshow slideshow-wrapper pb-section sliderFull">
    <div class="home-slideshow">

        @foreach(var item in Model.SliderList){
            <div class="slide">
                <div class="blur-up lazyload bg-size">
                    <img class="blur-up lazyload bg-img" data-src="Slider_image/@item.ImageUrl" src="@item.ImageUrl" alt="" title="@item.Title" />
                    <div class="slideshow__text-wrap slideshow__overlay classic bottom">
                        <div class="slideshow__text-content bottom">
                            <div class="wrap-caption center">
                                <h2 class="h1 mega-title slideshow__title">@item.Title</h2>
                                <span class="mega-subtitle slideshow__subtitle">@item.Description</span>
                                <a href="@item.ButtonsLink" class="btn">
                                <span class="btn">Shop now</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
}
