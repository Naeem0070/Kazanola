<!--End Home slider-->
<!--Collection Box slider-->
<div class="collection-box section">
    <div class="container-fluid">
        <div class="collection-grid">
            @foreach (var item in Model.CategoryList)
            {
                <div class="collection-grid-item">
                    <a href="collection-page.html" class="collection-grid-item__link">
                        <img data-src="Category/@item.ImageUrl" src="~/Category/@item.ImageUrl" width="207.90" height="238.562" alt="Fashion" class="blur-up lazyload" />
                        <div class="collection-grid-item__title-wrapper">
                            <h3 class="collection-grid-item__title btn btn--secondary no-border">@item.CategoryName</h3>
                        </div>
                    </a>
                </div>
            }
        </div>
</div>
</div>
<!--End Collection Box slider-->
<!--Logo Slider-->
<div class="section logo-section">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                <div class="logo-bar">
                    @foreach (var item in Model.BrandList) { 
                    <div class="logo-bar__item">
                            <img src="~/Brand/@item.ImageUrl" alt="" title="@item.BrandName" />
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Logo Slider-->